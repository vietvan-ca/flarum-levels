{
    "name": "vietvan-ca/flarum-levels",
    "description": "User level system based on XP with custom level names and manual assignment",
    "type": "flarum-extension",
    "require": {
        "flarum/core": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "VietVan\\FlarumLevels\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "User Levels",
            "icon": {
                "name": "fas fa-chart-line",
                "backgroundColor": "#0072ff",
                "color": "#fff"
            }
        }
    }
}